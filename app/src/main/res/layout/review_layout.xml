<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:layout_marginBottom="15dp"
    android:background="@drawable/round_ouline"
    android:backgroundTint="@color/primaryDarkColor"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/review_layout_title"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/restaurantName"
        android:textColor="@color/primaryTextColor"
        android:textSize="10dp" />

    <RatingBar
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:id="@+id/review_layout_rating"
        android:layout_gravity="center"
        android:layout_height="20dp"
        android:rating="4"
        android:stepSize="0.1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:id="@+id/review_layout_comment"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/longDescriptionText"
        android:textColor="@color/primaryTextColor"
        android:textSize="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="fill_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/review_layout_category"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginRight="50dp"
            android:text="test"
            android:textColor="@color/primaryTextColor"
            android:textSize="10dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/review_layout_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>